<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingRight="50dp"
    android:paddingLeft="50dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iis Yuni Harianti"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="160411100086"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PPB_D2"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tugas Praktikum"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btn_modul_1"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODUL 1"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="clik_btn_1"/>

    <Button
        android:id="@+id/btn_modul_2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODUL 2"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="clik_btn_2"/>

    <Button
        android:id="@+id/btn_modul_3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODUL 3"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="clik_btn_3"/>

    <Button
        android:id="@+id/btn_modul_4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MODUL 4"
        android:textStyle="bold"
        android:textSize="18dp"
        android:onClick="clik_btn_4"/>

</LinearLayout>