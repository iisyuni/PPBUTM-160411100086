<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotaPembelian">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/RL1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TMenu1"
                android:text="Expresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HMenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TMenu1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:text="Rp. 6000" />
            <TextView
                android:id="@+id/CMenu1"
                android:layout_below="@+id/TMenu1"
                android:layout_marginLeft="80dp"
                android:text="x_bmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/STMenu1"
                android:layout_below="@+id/TMenu1"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ToMenu1"
                android:layout_below="@+id/TMenu1"
                android:layout_alignParentRight="true"
                android:text="totalmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL2"
            android:visibility="gone"
            android:layout_below="@id/RL1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TMenu2"
                android:text="Americano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HMenu2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TMenu2"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:text="Rp. 7000" />
            <TextView
                android:id="@+id/CMenu2"
                android:layout_below="@+id/TMenu2"
                android:layout_marginLeft="80dp"
                android:text="x_bmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/STMenu2"
                android:layout_below="@+id/TMenu2"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ToMenu2"
                android:layout_below="@+id/TMenu2"
                android:layout_alignParentRight="true"
                android:text="totalmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL3"
            android:visibility="gone"
            android:layout_below="@id/RL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TMenu3"
                android:text="Cappucino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HMenu3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TMenu3"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:text="Rp. 8000" />
            <TextView
                android:id="@+id/CMenu3"
                android:layout_below="@+id/TMenu3"
                android:layout_marginLeft="80dp"
                android:text="x_bmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/STMenu3"
                android:layout_below="@+id/TMenu3"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ToMenu3"
                android:layout_below="@+id/TMenu3"
                android:layout_alignParentRight="true"
                android:text="totalmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL4"
            android:visibility="gone"
            android:layout_below="@id/RL3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TMenu4"
                android:text="Latte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HMenu4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TMenu4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:text="Rp. 9000" />
            <TextView
                android:id="@+id/CMenu4"
                android:layout_below="@+id/TMenu4"
                android:layout_marginLeft="80dp"
                android:text="x_bmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/STMenu4"
                android:layout_below="@+id/TMenu4"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ToMenu4"
                android:layout_below="@+id/TMenu4"
                android:layout_alignParentRight="true"
                android:text="totalmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL5"
            android:visibility="gone"
            android:layout_below="@id/RL4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/TMenu5"
                android:text="Mochaccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/HMenu5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TMenu5"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-1dp"
                android:text="Rp. 10000" />
            <TextView
                android:id="@+id/CMenu5"
                android:layout_below="@+id/TMenu5"
                android:layout_marginLeft="80dp"
                android:text="x_bmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/STMenu5"
                android:layout_below="@+id/TMenu5"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ToMenu5"
                android:layout_below="@+id/TMenu5"
                android:layout_alignParentRight="true"
                android:text="totalmenu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL6"
            android:layout_below="@id/RL5"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/Total"
                android:text="Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/SJTotal"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/JTotal"
                android:layout_alignParentRight="true"
                android:text="totalmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL7"
            android:layout_below="@+id/RL6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pembayaran"
                android:layout_marginTop="10dp"
                android:text="Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/SJPembayaran"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/JPembayaran"
                android:inputType="number"
                android:layout_alignParentRight="true"
                android:textAlignment="textEnd"
                android:text=""
                android:layout_marginTop="-5dp"
                android:textSize="14dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/RL8"
            android:layout_below="@+id/RL7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/kembalian"
                android:text="Kembalian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/SJKembalian"
                android:layout_centerInParent="true"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/JKembalian"
                android:inputType="number"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <Button
            android:id="@+id/bayar"
            android:text="bayar"
            android:onClick="bayar"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/RL8"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</ScrollView>